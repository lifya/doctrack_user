<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.pln.www.fragment.AboutFragment">


    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="V.1.0.0"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/about"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="12dp"
        android:src="@mipmap/logo" />

    <ImageView
        android:id="@+id/logounsri"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/about"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/about"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:src="@mipmap/unsri" />

    <ImageView
        android:id="@+id/logodoc"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/about"
        android:layout_alignStart="@+id/about"
        android:layout_alignTop="@+id/logounsri"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:src="@mipmap/pln" />

</RelativeLayout>
